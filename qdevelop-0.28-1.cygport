inherit qt4-cmake

DESCRIPTION="IDE for Qt4"
HOMEPAGE="http://biord-software.org/qdevelop/"
SRC_URI="http://biord-software.org/downloads/${PN}-v${PV}.tar.gz"
SRC_DIR="${PN}-v${PV}"

PATCH_URI="0.28-plugin-install.patch"

CYGCMAKE_ARGS="-DAUTOPLUGINS=ON"

